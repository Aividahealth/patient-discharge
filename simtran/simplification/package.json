{
  "name": "discharge-summary-simplifier",
  "version": "1.0.0",
  "description": "Cloud Function service for simplifying medical discharge summaries using Google Vertex AI",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "npm run build && functions-framework --target=processDischargeSummary --signature-type=cloudevent",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"**/*.ts\"",
    "deploy": "./deploy.sh"
  },
  "keywords": [
    "cloud-function",
    "vertex-ai",
    "medical",
    "discharge-summary",
    "simplification"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@google-cloud/firestore": "^7.1.0",
    "@google-cloud/functions-framework": "^3.3.0",
    "@google-cloud/storage": "^7.7.0",
    "@google-cloud/vertexai": "^1.4.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  }
}
